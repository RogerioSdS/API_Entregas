@model Api_Entregas.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Editar aluno";
}

@section Styles {

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css" />

    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
    <script src="~/js/toastr.min.js" asp-append-version="true"></script>
}

<div class="formbold-main-wrapper">
    <div class="formbold-form-wrapper">
        <form id="editStudentForm" method="post" asp-controller="Student" asp-action="StudentEdit">

            @Html.AntiForgeryToken()

            <div class="formbold-form-title">
                <h2>Aluno</h2>
                <p>Editar detalhes do aluno</p>
            </div>

            @if (TempData["FormData"] != null)
            {
                <div class="alert alert-info">
                    @TempData["FormData"]
                </div>
            }
            <div class="alert alert-warning">
                Estou com problemas para atualizar o aluno na API, vou resolver depois
            </div>
            <div class="mb-3">
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ResponsibleId, "Responsáveis")
                <!-- altura do dropdown: 5 itens visíveis -->
                <select asp-for="ResponsibleId" asp-items="ViewBag.Users" multiple class="form-control selectpicker"
                    data-live-search="true" data-size="5" title="-- selecione --">
                </select>
                @Html.ValidationMessageFor(m => m.ResponsibleId,
                "", new { @class = "text-danger" })
            </div>

            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.DateOfBirth)
            @Html.HiddenFor(m => m.Email)
            @Html.HiddenFor(m => m.FirstName)
            @Html.HiddenFor(m => m.LastName)
            @Html.HiddenFor(m => m.PhoneNumber)
            @Html.HiddenFor(m => m.Responsibles)
            
            <button type="submit" class="btn btn-primary">
                Salvar aluno
            </button>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3">
                    @TempData["SuccessMessage"]
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script>
        $(function () {
            $('.selectpicker').selectpicker();           // init
            $('.selectpicker').selectpicker('refresh');  // aplica o selected vindo do <option>
        });
    </script>
}
