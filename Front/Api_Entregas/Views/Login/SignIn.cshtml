@using Api_Entregas.ViewModels
@model SignInViewModel
@{
    ViewData["Title"] = "Dashboard de Cobranças";
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            background-color: #f4f6f8;
            color: #333;
        }

        header {
            background-color: #343a40;
            color: white;
            padding: 20px;
        }

        header h1 {
            font-size: 1.1rem;
            margin: 5px 0;
        }

        code {
            background: #212529;
            color: #0f0;
            padding: 2px 6px;
            border-radius: 4px;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            padding: 20px;
            gap: 20px;
        }

        .left-panel {
            flex: 2;
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 8px rgba(0,0,0,0.1);
            overflow-x: auto;
        }

        .right-panel {
            flex: 1;
            background: #ffffff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 8px rgba(0,0,0,0.1);
        }

        h2 {
            margin-top: 0;
            color: #007bff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        th {
            background: #007bff;
            color: white;
        }

        tr.highlight {
            background-color: #ffe6e6;
            color: red;
            font-weight: bold;
        }

        .summary-box {
            margin-bottom: 15px;
            background: #e3f2fd;
            border-left: 5px solid #2196f3;
            padding: 15px;
            border-radius: 6px;
        }

        .summary-box strong {
            font-size: 1.2em;
            display: block;
        }

        footer {
            text-align: center;
            padding: 15px;
            background-color: #e9ecef;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <header>
        @* <h1>Token: <code>@Model.Token</code></h1> *@
        <h1>Email: <code>@Model.Email</code></h1>
        <h1>RefreshToken: <code>@Model.RefreshToken</code></h1>
        <h1>Bem-vindo à minha API de Entregas</h1>
    </header>

    <div class="container">
        <div class="left-panel">
            <h2>Títulos Abertos - Mês Atual</h2>
            <table>
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Descrição</th>
                        <th>Valor</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>01/05/2025</td>
                        <td>Aula de Matemática</td>
                        <td>R$ 40,00</td>
                        <td>Em Aberto</td>
                    </tr>
                    <tr class="highlight">
                        <td>03/05/2025</td>
                        <td>Aula de Português</td>
                        <td>R$ 40,00</td>
                        <td>Vencida</td>
                    </tr>
                    <!-- mais linhas... -->
                </tbody>
            </table>
        </div>

        <div class="right-panel">
            <h2>Resumo</h2>
            <div class="summary-box">
                <strong>Total a Pagar:</strong> R$ 320,00
            </div>
            <div class="summary-box">
                <strong>Pagamentos Realizados:</strong> R$ 120,00
            </div>
            <div class="summary-box">
                <strong>Diferença:</strong> <span style="color: red">R$ 200,00</span>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; 2025 - Api_Entregas</p>
    </footer>

</body>
</html>
