@model Api_Entregas.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Perfil do Usuário";
 }

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
    <script src="~/js/toastr.min.js" asp-append-version="true"></script>

}

<body class="">
    <div class="formbold-main-wrapper">
        <div class="formbold-form-wrapper">
                        <form method="post" asp-action="Perfil" asp-controller="User">
                            <div class="formbold-form-title">
                                <h2>Perfil do Usuário</h2>
                                <p>Edite suas informações de cadastro abaixo.</p>
                            </div>

                            @if (TempData["FormData"] != null)
                            {
                                <div class="alert alert-info">
                                    @TempData["FormData"]
                                </div>
                            }

                            <div class="formbold-input-flex">
                                <div>
                                    <label class="formbold-form-label">Nome</label>
                                    <input asp-for="FirstName" class="formbold-form-input" />
                                </div>
                                <div>
                                    <label class="formbold-form-label">Sobrenome</label>
                                    <input asp-for="LastName" class="formbold-form-input" />
                                </div>
                            </div>

                            <div class="formbold-input-flex">
                                <div>
                                    <label class="formbold-form-label">Email</label>
                                    <input asp-for="Email" type="email" class="formbold-form-input" autocomplete="email" />
                                </div>
                                <div>
                                    <label class="formbold-form-label">Telefone</label>
                                    <input asp-for="PhoneNumber" class="formbold-form-input" type="tel"
                                           placeholder="(99) 99999-9999"
                                           pattern="\(\d{2}\) \d{5}-\d{4}" maxlength="16" />
                                </div>
                            </div>

                            <div class="formbold-mb-3">
                                <label class="formbold-form-label">Endereço</label>
                                <input asp-for="Address" class="formbold-form-input" />
                            </div>

                            <div class="formbold-mb-3">
                                <label class="formbold-form-label">Complemento</label>
                                <input asp-for="Complement" class="formbold-form-input" />
                            </div>

                            <div class="formbold-input-flex">
                                <div>
                                    <label class="formbold-form-label">Cidade</label>
                                    <input asp-for="City" class="formbold-form-input" />
                                </div>
                                <div>
                                    <label class="formbold-form-label">CEP</label>
                                    <input asp-for="ZipCode" class="formbold-form-input"
                                           placeholder="99999-999"
                                           pattern="\d{5}-\d{3}" maxlength="9" />
                                </div>
                            </div>

                            <div class="formbold-mb-3">
                                <label class="formbold-form-label">Senha</label>
                                <input asp-for="Password" type="password" class="formbold-form-input" />
                            </div>

                            <div class="formbold-mb-3">
                                <label class="formbold-form-label">Confirme a senha</label>
                                <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="formbold-form-input" />
                            </div>

                            <div class="formbold-mb-3">
                                <input type="checkbox" id="termsCheckbox" required />
                                <label for="termsCheckbox">Aceito os termos de uso</label>
                            </div>

                            <button type="submit" class="formbold-btn">Salvar Perfil</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            @if (TempData["SuccessMessage"] != null)
            {
                <text>toastr.success('@TempData["SuccessMessage"]');</text>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <text>toastr.error('@error.ErrorMessage');</text>
                }
            }

            $('#profileModal').modal('show');
        });
    </script>
</body>
